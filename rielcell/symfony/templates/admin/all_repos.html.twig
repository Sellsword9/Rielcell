{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <!-- Shows all repos for all users at the same time -->
    <h1>All Repositories</h1>
    {% if repos is empty %}
        <p>No repositories found.</p>
    {% else %}
        <ul>
            {% for repo in repos %}
                <li>
                    <strong>{{ repo.name }}</strong> by {{ repo.user.username }} - 
                    <!-- Delete link -->
                    <a href="{{ path('app_admin_delete_repo', { 'id': repo.id }) }}" onclick="return confirm('Are you sure you want to delete this repository?');">Delete</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
