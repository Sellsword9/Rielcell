{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <!-- Shows all users and links toward other admin pages. Allows the deletion of users -->
    <h1>Admin Dashboard</h1>
    {% if users is empty %}
        <p>No users found.</p>
    {% else %}
        <ul>
            {% for user in users %}
                <li>
                    <strong>{{ user.username }}</strong> - 
                    <!-- Link to see user's repositories -->
                    <a href="{{ path('app_admin_see_repos', { 'id': user.id }) }}">See user's repositories</a> |
                    <!-- Delete link -->
                    <a href="{{ path('app_admin_delete_user', { 'id': user.id }) }}" onclick="return confirm('Are you sure you want to delete this user?');">Delete user</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
