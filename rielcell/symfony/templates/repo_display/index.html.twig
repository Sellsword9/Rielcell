{% extends 'base.html.twig' %}

{% block title %}Hello RepoDisplayController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <h1>{{ repo.name }}</h1>
   
    <h1>
        <a href="{{ path('app_user_profile', {'username': owner.username}) }}"> 
            {{ owner.username }} / 
        </a> 
        {{ repo.name }} 
    </h1> <!-- Username/reponame -->
    {% if error %}
        <h4> We couldn't find the repository files </h4>
    {% else %}
    <h4> Repository Type: {{ repo.vcs }} </h4>
    {% if repo.vcs == 'riel' %}
        <h4> Riel seed: {{ repo.RielSeed }} </h4>
    {% endif %}
    <h4> Files: </h4>
    <p> 
        {% for file in files %}
            {{file}} <br>
        {% endfor %}
    </p>
    {% endif %}
</div>
{% endblock %}
